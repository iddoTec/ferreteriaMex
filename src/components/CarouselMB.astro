---
const { products } = Astro.props;
---

<section id="carousel" class="scroll-mt-20 mt-10 sm:mt-0 sm:px-4">
    <article class="col-span-2 size-tb:hidden">
        <div
            data-hs-carousel='{"loadingClasses": "opacity-0", "isAutoPlay": true }'
            class="relative"
        >
            <div
                class="hs-carousel relative overflow-hidden w-full min-h-48 lg:rounded-s-3xl"
            >
                <div
                    class="hs-carousel-body absolute top-0 bottom-0 start-0 flex flex-nowrap transition-transform duration-700 opacity-0"
                >
                    <!-- Primera diapositiva con los primeros 4 productos -->
                    <div class="hs-carousel-slide">
                        <div class="flex justify-center h-full space-x-1">
                            {
                                products.slice(0, 4).map((product) => (
                                    <div class="container py-4 w-24 sm:w-64">
                                        <div class="mx-auto flex flex-col justify-center bg-white rounded-2xl shadow-xl shadow-gray-400/20">
                                            <div class="relative flex justify-center">
                                                <img
                                                    src={product.img}
                                                    alt={product.nombre}
                                                    class="h-20 sm:h-48 w-full object-contain object-center mb-2"
                                                />
                                                <div class="absolute bottom-2 right-2 bg-sky-950 text-white text-[10px] px-2 py-1 rounded-lg">
                                                    ${product.precio}
                                                </div>
                                            </div>

                                            <div class="p-2 sm:p-6">
                                                <h1 class="text-[10px] font-medium text-gray-700 pb-1 sm:pb-2">
                                                    {product.nombre.length > 18
                                                        ? `${product.nombre.slice(0, 18)}...`
                                                        : product.nombre}
                                                </h1>
                                                <p class="text-[6px] text-gray-500 leading-4 sm:leading-6 h-8 sm:h-24">
                                                    {product.descripcion.length > 35
                                                        ? `${product.descripcion.slice(0, 35)}...`
                                                        : product.descripcion}
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                ))
                            }
                        </div>
                    </div>

                    <!-- Segunda diapositiva con los siguientes 4 productos -->
                    <div class="hs-carousel-slide">
                        <div class="flex justify-center h-full space-x-1">
                            {
                                products.slice(4, 8).map((product) => (
                                    <div class="container py-4 w-24 sm:w-64">
                                        <div class="mx-auto flex flex-col justify-center bg-white rounded-2xl shadow-xl shadow-gray-400/20">
                                            <div class="relative flex justify-center">
                                                <img
                                                    src={product.img}
                                                    alt={product.nombre}
                                                    class="h-20 sm:h-48 w-full object-contain object-center mb-2"
                                                />
                                                <div class="absolute bottom-2 right-2 bg-sky-950 text-white text-[10px] px-2 py-1 rounded-lg">
                                                    ${product.precio}
                                                </div>
                                            </div>

                                            <div class="p-2 sm:p-6">
                                                <h1 class="text-[10px] font-medium text-gray-700 pb-1 sm:pb-2">
                                                    {product.nombre.length > 18
                                                        ? `${product.nombre.slice(0, 18)}...`
                                                        : product.nombre}
                                                </h1>
                                                <p class="text-[6px] text-gray-500 leading-4 sm:leading-6 h-8 sm:h-24">
                                                    {product.descripcion.length > 35
                                                        ? `${product.descripcion.slice(0, 35)}...`
                                                        : product.descripcion}
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                ))
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </article>
</section>